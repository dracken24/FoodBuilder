<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="FoodBuilder.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:FoodBuilder.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="FoodBuilder"
    Shell.TabBarBackgroundColor="#006269"
    Shell.TabBarForegroundColor="White"
    Shell.TabBarTitleColor="White"
    Shell.TabBarUnselectedColor="#00EFFF">

    <!-- Page principale avec navigation par onglets -->
    <TabBar Route="main">
        <ShellContent
        Title="Home"
        Icon="home.png"
        ContentTemplate="{DataTemplate pages:Home}"
        Route="home" />

        <ShellContent
        Title="Favorite"
        Icon="favoris.png"
        ContentTemplate="{DataTemplate pages:Favorites}"
        Route="favorite" />

        <ShellContent
        Title="Meal Plan"
        Icon="mealplan.png"
        ContentTemplate="{DataTemplate pages:MealPlan}"
        Route="mealPlan" />

        <ShellContent
        Title="Settings"
        Icon="settings.png"
        ContentTemplate="{DataTemplate pages:Settings}"
        Route="settings" />
    </TabBar>

</Shell>
